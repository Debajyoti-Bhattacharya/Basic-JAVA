Input :
public class Blocktest
{
	public static void main(String args[]) 
	{ 
		int x , y;
		x = 10;
		y = 20;
		for(x = 0; x<10; x++)
		{
			System.out.println("The X number:" + x);
			System.out.println("The Y number:" + y);
			y = y - 2;
			
		}
		
	}
	

}

